doctype html

html(lang='en')
  head
    style.
      body {
        font-family: "General Sans", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
        background-image: radial-gradient(circle at 0% 0%, rgb(246, 247, 248) 0%, rgb(235, 245, 255) 100%);
        padding: 20px;
      }
      button {
        background-color: #4C8BF5;
        color: #fff;
        padding: 10px;
        border-radius: 10px;
        border-color: rgb(0, 107, 214);
        cursor: pointer;
        font-weight: bold;
      }
      button:hover {
        background-color: rgb(0, 97, 194);
        border-color: rgb(0, 77, 153);
      }
      h3 {
        color: rgb(15, 18, 20);
      }
      pre.error {
        border: 2px solid red;
        border-radius: 5px;
        padding: 15px;
        white-space: pre-wrap;       /* Since CSS 2.1 */
        white-space: -moz-pre-wrap;  /* Mozilla, since 1999 */
        white-space: -pre-wrap;      /* Opera 4-6 */
        white-space: -o-pre-wrap;    /* Opera 7 */
        word-wrap: break-word;       /* Internet Explorer 5.5+ */
      }
  body
    h3 An error occured
    pre(class="error") #{error}
    form(role='form' method='GET' action='/')
        button.btn.btn-primary(type="submit", name="submit") Back to Home >
    p
    form(role='form' method='GET' action='/redirect')
        input(type="hidden", name="accessToken", value=accessToken)
        button.btn.btn-primary(type="submit", name="submit") Back to Users >
    