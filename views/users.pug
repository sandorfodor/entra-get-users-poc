doctype html

html(lang='en')
  head
    style.
      body {
        font-family: "General Sans", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
        background-image: radial-gradient(circle at 0% 0%, rgb(246, 247, 248) 0%, rgb(235, 245, 255) 100%);
        padding: 20px;
      }
      table {
        width: 80%;
        border: 1px solid #777;
        border-collapse: collapse;
      }
      tbody td, th {
        padding: 10px;
        text-align: left;
      }
      tbody th {
        background-color: rgb(0, 97, 194);
        color: #fff;
      }
      tbody tr:nth-child(odd) {
        background-color: #78aaff;
        color: #000;
      }
      button {
        background-color: #4C8BF5;
        color: #fff;
        padding: 10px;
        border-radius: 10px;
        border-color: rgb(0, 107, 214);
        cursor: pointer;
        font-weight: bold;
      }
      button:hover {
        background-color: rgb(0, 97, 194);
        border-color: rgb(0, 77, 153);
      }
  body
    h3 Users in tenant
    table.table.table-striped
      tr
        th ID
        th Name
        th Email

      each u in users
        tr
          td= u.id
          td= u.displayName
          td= u.mail

    p
    form(role='form' method='GET' action='/update_user')
        input(type="hidden", name="accessToken", value=accessToken)
        input(type="hidden", name="userId", value="2331fe89-6498-41f1-9b54-a09db997e4e7")
        button.btn.btn-primary(type="submit", name="submit") Update "Test" user >
