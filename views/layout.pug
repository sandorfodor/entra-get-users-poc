doctype html

html(lang='en')
  head
    style.
      body {
        font-family: "General Sans", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
        background-image: radial-gradient(circle at 0% 0%, rgb(246, 247, 248) 0%, rgb(235, 245, 255) 100%);
        padding: 20px;
      }
      button {
        background-color: #4C8BF5;
        color: #fff;
        padding: 10px;
        border-radius: 10px;
        border-color: rgb(0, 107, 214);
        cursor: pointer;
        font-weight: bold;
      }
      button:hover {
        background-color: rgb(0, 97, 194);
        border-color: rgb(0, 77, 153);
      }
      h3 {
        color: rgb(15, 18, 20);
      }
      pre.error {
        border: 2px solid red;
        border-radius: 5px;
        padding: 15px;
        white-space: pre-wrap;       /* Since CSS 2.1 */
        white-space: -moz-pre-wrap;  /* Mozilla, since 1999 */
        white-space: -pre-wrap;      /* Opera 4-6 */
        white-space: -o-pre-wrap;    /* Opera 7 */
        word-wrap: break-word;       /* Internet Explorer 5.5+ */
      }
      table {
        width: 80%;
        border: 1px solid #777;
        border-collapse: collapse;
      }
      tbody td, th {
        padding: 10px;
        text-align: left;
      }
      tbody th {
        background-color: rgb(0, 97, 194);
        color: #fff;
      }
      tbody tr:nth-child(odd) {
        background-color: #78aaff;
        color: #000;
      }
  body
    block content
    