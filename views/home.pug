doctype html

html(lang='en')
  head
    style.
      body {
        font-family: "General Sans", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
        background-image: radial-gradient(circle at 0% 0%, rgb(246, 247, 248) 0%, rgb(235, 245, 255) 100%);
        padding: 20px;
      }
      button {
        background-color: #4C8BF5;
        color: #fff;
        padding: 10px;
        border-radius: 10px;
        border-color: rgb(0, 107, 214);
        cursor: pointer;
        font-weight: bold;
      }
      button:hover {
        background-color: rgb(0, 97, 194);
        border-color: rgb(0, 77, 153);
      }
      h3 {
        color: rgb(15, 18, 20);
      }
  body
